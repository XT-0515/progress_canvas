/* pages/play/play.wxss */
.hot{
  width: 100%;
  height: 50px;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #ffffff;
  border-bottom: 1px solid lightgray;
  position: relative;
}
.hot_img{
  width: 100%;
  height: 100%;
}
.hot_txt{
  font-size: 16px;
  color: #1296DB;
  font-weight: bold;
  position: absolute;
}
.swiper_list{
  width: 100%;
  height: 800px;
}
.swiper-tab{
width: 100%;
border-bottom: 2px solid #ccc;
text-align: center;
height: 40px;
line-height: 40px;
font-weight: bold;
}
.swiper-tab-item{
display: inline-block;
width: 33.33%;
color:black;
}
.active{
color:#1296DB;
border-bottom: 2px solid #1296DB;
}
.list_one{
  width: 100%;
  height: 180px;
  display: flex;
  box-sizing: border-box;
  padding: 0 15px;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
}
.list_img{
  width: 100%;
  height: 120px;
  border-radius: 10px;
}
.list_txt{
  font-size: 15px;
  margin: 5px 0;
}
.list_txt1{
  font-size: 11px;
  color: #999999;
}
.list_two{
  width: 100%;
  height: 180px;
  box-sizing: border-box;
  padding: 0 15px;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.list_three{
  width: 50%;
  height: 100%;
  box-sizing: border-box;
  padding: 0 10px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
}
.list_img1{
  width: 100%;
  height: 50%;
  border-radius: 10px;
}